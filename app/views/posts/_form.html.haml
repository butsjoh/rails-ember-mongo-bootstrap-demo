= form_for(resource) do |f|
  - if resource.errors.any?
    #error_explanation
      %h2
        = pluralize(resource.errors.count, "error")
        prohibited this post from being saved:

      %ul
        - resource.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title, 'Title'
    = f.text_field :title
  .field
    = f.label :body, 'Body'
    = f.text_field :body
  .actions
    = f.submit
