!!! 5
%html
  %head
    %title RailsEmberMongoBootstrapDemo
    %meta{ :name => "description", :content => "" }
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    %meta{ :charset => "UTF-8" }
    = favicon_link_tag
    = stylesheet_link_tag    "application", :media => "all"
    = stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Ribeye", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    :plain
      <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
      <![endif]-->

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{'data-toggle'=>"collapse", 'data-target'=>".nav-collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
    
          %a.brand{'href'=>'#'} RailsEmberMongoBootstrapDemo
          .nav-collapse
            %ul.nav
              %li= link_to 'new', new_post_path
              %li= link_to 'posts', posts_path
              %li= link_to 'switch to Ember.js mode', root_path

    %section#content.container-fluid
      .row-fluid
        .span12
          = yield

